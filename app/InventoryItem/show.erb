<%= render partial: 'partials/page_header',
           locals: {
               :buttons => {
                   :left => {:title => 'Back', :classes => 'btn-default btn-back', :action => url_for(:action => :index)},
                   :right => {:title => 'Edit', :classes => 'btn-primary btn-edit', :action => url_for(:action => :edit, :id => @inventoryItem.object)}
               }
           }
%>

<div class="page">
  <ul class="list-group">

    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <span pull-right><strong>UPC</strong></span>
        </div>
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
          <%= @inventoryItem.upc %>
        </div>
      </div>
    </li>

    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <span pull-right><strong>Product Name</strong></span>
        </div>
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
          <%= @inventoryItem.productName %>
        </div>
      </div>
    </li>

    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <span pull-right><strong>Quantity</strong></span>
        </div>
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
          <%= @inventoryItem.quantity %>
        </div>
      </div>
    </li>

    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <span pull-right><strong>Photo</strong></span>
        </div>

        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
          <% if @inventoryItem.photoUri %>
              <div class="thumbnail">
                <a href="<%= url_for :action => :photo_view, :id => @inventoryItem.object %>"><img src="<%= Rho::Application.expandDatabaseBlobFilePath(@inventoryItem.photoUri) %>"></a>
                <div class="text-center">
                  <small>View</small>
                </div>
              </div>
          <% else %>
            <div class="alert alert-warning">No Photo yet</div>
          <% end %>
        </div>

      </div>
    </li>

    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <span pull-right><strong>Employee Id</strong></span>
        </div>
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
          <%= @inventoryItem.employeeId %>
        </div>
      </div>
    </li>

    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <span pull-right><strong>Signature</strong></span>
        </div>

        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
          <% if @inventoryItem.signatureUri %>
              <div class="thumbnail">
                <img src="<%= Rho::Application.expandDatabaseBlobFilePath(@inventoryItem.signatureUri) %>">
              </div>
          <% else %>
            <div class="alert alert-warning">No Signature yet</div>
          <% end %>
        </div>

      </div>
    </li>

  </ul>

</div>
